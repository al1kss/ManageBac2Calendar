{
  "manifest_version": 3,
  "name": "ManageBac Exporter",
  "version": "1.7",
  "host_permissions": [
    "*://*.managebac.com/*",
    "https://alikhan.studio/*"
  ],
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [{
    "matches": ["*://*.managebac.com/*"],
    "js": ["content.js"],
    "run_at": "document_idle"
  }],
  "background": {
    "service_worker": "background.js"
  }
}